<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.login.RegisterCompleteFragment">

    <ImageView
        android:id="@+id/clapping"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/clappinghands"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bt_complete"
        android:layout_marginBottom="48dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clapping"
        android:layout_marginTop="12dp"

        android:text="오신 것을 환영해요\n박시원님"
        android:fontFamily="@font/suitebold"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="24sp"
        />



    <Button
        android:id="@+id/bt_complete"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:text="완료"
        android:textColor="@color/white"
        android:fontFamily="@font/suitebold"
        android:background="@drawable/bt_next"/>

</androidx.constraintlayout.widget.ConstraintLayout>